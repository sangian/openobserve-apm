# =============================================================================
# VPS PRESET: 4GB RAM / 4 Cores
# =============================================================================
# Suitable for: Development, testing, very light production (<5,000 events/min)
# Total allocation: ~3.2GB (leaves ~800MB for OS)

# OpenObserve
OPENOBSERVE_MEM_LIMIT=3g
OPENOBSERVE_MEM_RESERVATION=1g
OPENOBSERVE_CPUS=3.0
ZO_MEM_TABLE_MAX_SIZE=536870912
ZO_COMPACT_MAX_FILE_SIZE=134217728
ZO_COMPACT_INTERVAL=120
ZO_DATA_WAL_MEMORY_MODE_ENABLED=false

# Traefik
TRAEFIK_MEM_LIMIT=192m
TRAEFIK_MEM_RESERVATION=96m
TRAEFIK_CPUS=0.5

# Data retention (shorter for limited storage)
ZO_COMPACT_DATA_RETENTION_DAYS=14
