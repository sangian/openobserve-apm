# =============================================================================
# VPS PRESET: 24GB RAM / 8+ Cores
# =============================================================================
# Suitable for: Heavy production, 30-100 apps, <500,000 events/min
# Total allocation: ~20GB (leaves ~4GB for OS)

# OpenObserve
OPENOBSERVE_MEM_LIMIT=19g
OPENOBSERVE_MEM_RESERVATION=10g
OPENOBSERVE_CPUS=7.0
ZO_MEM_TABLE_MAX_SIZE=4294967296
ZO_COMPACT_MAX_FILE_SIZE=1073741824
ZO_COMPACT_INTERVAL=30
ZO_DATA_WAL_MEMORY_MODE_ENABLED=true

# Traefik
TRAEFIK_MEM_LIMIT=512m
TRAEFIK_MEM_RESERVATION=256m
TRAEFIK_CPUS=1.0

# Data retention (longer for more storage)
ZO_COMPACT_DATA_RETENTION_DAYS=90
