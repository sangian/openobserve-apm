# =============================================================================
# VPS PRESET: 8GB RAM / 4-6 Cores
# =============================================================================
# Suitable for: Light production, 1-10 apps, <20,000 events/min
# Total allocation: ~6.5GB (leaves ~1.5GB for OS)

# OpenObserve
OPENOBSERVE_MEM_LIMIT=6g
OPENOBSERVE_MEM_RESERVATION=3g
OPENOBSERVE_CPUS=4.0
ZO_MEM_TABLE_MAX_SIZE=1073741824
ZO_COMPACT_MAX_FILE_SIZE=268435456
ZO_COMPACT_INTERVAL=60
ZO_DATA_WAL_MEMORY_MODE_ENABLED=false

# Traefik
TRAEFIK_MEM_LIMIT=256m
TRAEFIK_MEM_RESERVATION=128m
TRAEFIK_CPUS=0.5

# Data retention
ZO_COMPACT_DATA_RETENTION_DAYS=30
