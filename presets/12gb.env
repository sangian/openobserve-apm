# =============================================================================
# VPS PRESET: 12GB RAM / 6 Cores
# =============================================================================
# Suitable for: Medium production, 10-30 apps, <100,000 events/min
# Total allocation: ~10GB (leaves ~2GB for OS)

# OpenObserve
OPENOBSERVE_MEM_LIMIT=9g
OPENOBSERVE_MEM_RESERVATION=5g
OPENOBSERVE_CPUS=5.0
ZO_MEM_TABLE_MAX_SIZE=2147483648
ZO_COMPACT_MAX_FILE_SIZE=536870912
ZO_COMPACT_INTERVAL=45
ZO_DATA_WAL_MEMORY_MODE_ENABLED=false

# Traefik
TRAEFIK_MEM_LIMIT=256m
TRAEFIK_MEM_RESERVATION=128m
TRAEFIK_CPUS=0.5

# Data retention
ZO_COMPACT_DATA_RETENTION_DAYS=60
